{
    "$schema": "https://getcomposer.org/schema.json",
    "name": "karmabunny/sprout3-site",
    "config": {
        "optimize-autoloader": true,
        "sort-packages": true,
        "platform": {
            "php": "7.3"
        }
    },
    "autoload": {
        "psr-4": {
            "SproutModules\\Karmabunny\\": "src/modules"
        }
    },
    "extra": {
        "locals": {
            "karmabunny/kb": "../kbphp",
            "karmabunny/pdb": "../kbpdb",
            "karmabunny/rdb": "../kbrdb",
            "karmabunny/nstrack": "../nstrack"
        }
    },
    "scripts": {
        "serve": "@php -S 0.0.0.0:8080 -t src src/index.php",
        "patch-locals": "@php tools/patch_locals.php"
    },
    "repositories": {
        "sprout3": {
            "type": "path",
            "url": "../sprout3"
        }
    },
    "require": {
        "karmabunny/sprout": "dev-master"
    }
}
